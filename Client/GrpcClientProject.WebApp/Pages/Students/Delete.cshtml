@page
@model GrpcClientProject.WebApp.Pages.Students.DeleteModel

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0 page-title">Delete Student</h3>
        <a class="btn btn-outline-secondary" asp-page="Index">Back to List</a>
    </div>

    <div class="alert alert-warning" role="alert">
        Are you sure you want to delete this student?
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Student?.Id</dd>
                <dt class="col-sm-3">Student Number</dt>
                <dd class="col-sm-9">@Model.Student?.StudentNumber</dd>
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Student?.FirstName @Model.Student?.LastName</dd>
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Student?.Description</dd>
            </dl>

            <form method="post" class="mt-3 d-flex justify-content-end">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

