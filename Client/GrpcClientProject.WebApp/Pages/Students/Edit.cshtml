@page
@model GrpcClientProject.WebApp.Pages.Students.EditModel

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0 page-title">Edit Student</h3>
        <a class="btn btn-outline-secondary" asp-page="Index">Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                <input type="hidden" asp-for="Input.Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Input.FirstName"></label>
                        <input class="form-control" asp-for="Input.FirstName" />
                        <span class="text-danger" asp-validation-for="Input.FirstName"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Input.LastName"></label>
                        <input class="form-control" asp-for="Input.LastName" />
                        <span class="text-danger" asp-validation-for="Input.LastName"></span>
                    </div>
                    <div class="col-12">
                        <label class="form-label" asp-for="Input.Description"></label>
                        <textarea class="form-control" asp-for="Input.Description" rows="3"></textarea>
                        <span class="text-danger" asp-validation-for="Input.Description"></span>
                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

