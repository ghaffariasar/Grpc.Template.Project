@page
@model GrpcClientProject.WebApp.Pages.Students.IndexModel
@{
}




<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0">Students</h3>
        <a class="btn btn-primary" asp-page="Create">Add Students</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive table-scroll">
                <table class="table table-hover table-striped align-middle m-0">
                    <thead class="table-light">
                    <tr>
                        <th style="width: 12rem;">Student Number</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Numbers</th>
                        <th>Description</th>
                        <th style="width: 12rem;" class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Students)
                    {
                        <tr>
                            <td>@item.StudentNumber</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                                <td>
                                    @if (item.PhoneNumbers != null)
                                    {
                                        @string.Join(", ", item.PhoneNumbers)
                                    }
                                </td>
                            <td>@item.Description</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-page="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger ms-1" asp-page="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
